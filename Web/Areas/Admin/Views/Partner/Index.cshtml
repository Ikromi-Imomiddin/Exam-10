@using Domain.Dtos;
@model List<GetPartnerDto>
<table class="table align-middle mb-0 bg-white">
  <thead class="bg-light">
    <tr>
      <th>Id</th>
      <th>Image</th>
      <th>Title</th>
      <th>Description</th>
    </tr>
  </thead>
  <tbody>
    @foreach (var partner in Model)
    {
    <tr>
      <td>
        <div class="d-flex align-items-center">
          <img
              src="/images/@partner.Image"
              alt=""
              style="width: 45px; height: 45px"
              class="rounded-circle"
              />
          <div class="ms-3">
            <p class="fw-bold mb-1">@partner.Title</p>
            <p class="text-muted mb-0">@partner.Description</p>
          </div>
        </div>
      </td>
      <td>
        <span class="badge badge-success rounded-pill d-inline">Active</span>
      </td>
      <td>
        <a href="/admin/partner/edit/@partner.Id">Edit</a>
        <a href="/admin/partner/delete/@partner.Id">Delete</a> 
      </td>
    </tr>
    }
  </tbody>
</table>